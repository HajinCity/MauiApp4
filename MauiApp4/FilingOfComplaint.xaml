<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.FilingOfComplaint"
             Title="FilingOfComplaint"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Header -->
            <Button Text="File Your Complaint"
                BackgroundColor="#FF2DD5"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10" />

            <!-- Complainant Section -->
            <Label Text="Complainant" FontAttributes="Bold" />

            <Entry Placeholder="Your Last Name" />
            <Entry Placeholder="Your First Name" />
            <Entry Placeholder="Your Middle Name" />

            <!-- Sex -->
            <Label Text="Sex" />
            <HorizontalStackLayout>
                <RadioButton Content="Male" GroupName="SexGroup" />
                <RadioButton Content="Female" GroupName="SexGroup" />
            </HorizontalStackLayout>

            <Entry Placeholder="Contact No." />
            <Entry Placeholder="San Pedro Pagadian City" />
            <Entry Placeholder="Purok" />

            <!-- Respondent Details -->
            <Label Text="Respondent Details" FontAttributes="Bold" />

            <Entry Placeholder="Last Name" />
            <Entry Placeholder="First Name" />
            <Entry Placeholder="Middle Name" />
            <Entry Placeholder="Relationship to Complainant" />

            <!-- Complaint Details -->
            <Label Text="Complaint Details" FontAttributes="Bold" />
            <Editor HeightRequest="100" Placeholder="Enter details here..." BackgroundColor="#E0E0E0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
        <Image Source="sanpedro1.png"
               WidthRequest="200"
               HeightRequest="200"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Label Text="BARANGAY SAN PEDRO&#10;PAGADIAN CITY"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               Margin="0,20,0,0"
               FontSize="18"
               TextColor="Black"/>
    </VerticalStackLayout>
</ContentPage>
